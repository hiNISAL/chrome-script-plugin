{
    "name": "script",
    "manifest_version": 3,
    "version": "0.1",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab",
        "storage",
        "pageCapture",
        "tabs",
        "downloads"
    ],
    "action": {
        "default_title": "Settings",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "css": ["float-window.css"],
            "js": ["recoder-popper.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["<all_urls>"],
        "accepts_tls_channel_id": false
    }
}